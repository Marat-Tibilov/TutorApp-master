<StudentCardContent>:
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: 260

    MDTextField:
        id: students_list
        hint_text: "Ученик"
        text: str(root.student.ids.student_name.text)
        readonly: True

        on_focus:
            if self.focus: root.students_list.open()

    MDTextField:
        id: student_time
        hint_text: "Назначенное время"
        text: str(root.student.ids.time.text)
        readonly: True

        on_focus:
            if self.focus: root.show_date_picker()

    MDTextField:
        id: lessons_list
        hint_text: "Тип занятия"
        text: str(root.student.cols["lesson_type"])
        readonly: True

        on_focus:
            if self.focus: root.lessons_list.open()

    MDTextField:
        id: payment_list
        hint_text: "Форма оплаты"
        text: str(root.student.cols["payment_type"])
        readonly: True

        on_focus:
            if self.focus: root.payment_list.open()
